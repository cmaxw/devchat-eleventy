---
layout: layouts/base.njk
---

	<!-- single post start -->
	<section class="single-post-wrapper">
		<div class="container">
			<div class="row">
				<div class="col-lg-9">
					<ol class="breadcrumb">
						<li>
							<a href="/">
								<i class="fa fa-home"></i>
								Home
							</a>
						</li>
						{% if podcast %}
						<li>
							<a href="/{{podcast}}">{{podcasts[podcast].title}}</a>
						</li>
						{% endif %}
						
						{% if blog %}
						<li>
							<a href="/blog">Blog</a>
						</li>
						{% endif %}
						
						<li>{{title | safe}}</li>
					</ol>
					<!-- breadcump end-->
					<div class="ts-grid-box content-wrapper single-post">
						<div class="entry-header">
							<h2 class="post-title lg">{{ title }}</h2>
							<ul class="post-meta-info">
								{% if author %}
								<li class="author">
									<a href="#">
										<img src="/images/authors/{{authors[author].photo}}" alt=""> {{ authors[author].name }}
									</a>
								</li>
								{% endif %}
								{% if hide_date %}
								{% else %}
								<li>
									<i class="fa fa-calendar-o"></i>
									{{ date | date }}
								</li>
								{% endif %}
								<li class="share-post">
									<br>
									<h4>Share this post</h4>
									<div class="sharethis-inline-share-buttons"></div>
								</li>
							</ul>
						</div>
						<!-- single post header end-->
						<div class="post-content-area">
							<div class="post-media post-featured-image">
								{% if youtube_video_id %}
									{{ youtube_video_id | embed_youtube | safe}}
								{% else %}
									{% if audio_url %}
										<div class="pcast-player">
											<div class="pcast-player-controls">
												<button class="pcast-play"><i class="fa fa-play"></i><span>Play</span></button>
												<button class="pcast-pause"><i class="fa fa-pause"></i><span>Pause</span></button>
												<button class="pcast-rewind"><i class="fa fa-fast-backward"></i><span>Rewind</span></button>
												<span class="pcast-currenttime pcast-time">00:00</span>
												<progress class="pcast-progress" value="0"></progress>
												<span class="pcast-duration pcast-time">{{duration}}</span>
												<button class="pcast-speed">1x</button>
												<button class="pcast-mute"><i class="fa fa-volume-up"></i><span>Mute/Unmute</span></button>
											</div>
											<audio src="{{audio_url}}"></audio><a class="pcast-download" href="{{audio_url}}" download>Download MP3</a>
										</div>
									{% else %}
										{% if hide_image %}
										{% else %}
											<img src="{{ image }}" class="img-fluid" alt="">
										{% endif %}
									{% endif %}
								{% endif %}
							</div>
							<div class="entry-content">
								{{ content | safe }}
								{%- if question1 -%}
								<h2>FAQ</h2>
									<h3>{{question1 | safe}}</h3>
									<p>{{answer1 | safe}}</p>
									<br>
									{%- if question2 -%}
									<h3>{{question2 | safe}}</h3>
									<p>{{answer2 | safe}}</p>
									<br>
									{%- endif -%}
									{%- if question3 -%}
									<h3>{{question3 | safe}}</h3>
									<p>{{answer3 | safe}}</p>
									<br>
									{%- endif -%}
									{%- if question4 -%}
									<h3>{{question4 | safe}}</h3>
									<p>{{answer4 | safe}}</p>
									<br>
									{%- endif -%}
									{%- if question5 -%}
									<h3>{{question5 | safe}}</h3>
									<p>{{answer5 | safe}}</p>
									<br>
									{%- endif -%}

									<script type="application/ld+json">
									{
									"@context": "https://schema.org",
									"@type": "FAQPage",
									"mainEntity": [{
									"@type": "Question",
									"name": "{{question1}}",
									"acceptedAnswer": {
									"@type": "Answer",
									"text": "{{answer1}}"
									}
									}{%- if question2 -%}, {
									"@type": "Question",
									"name": "{{question2}}",
									"acceptedAnswer": {
									"@type": "Answer",
									"text": "{{answer2}}"
									}
									}{%- endif -%}{%- if question3 -%}, {
									"@type": "Question",
									"name": "{{question3}}",
									"acceptedAnswer": {
									"@type": "Answer",
									"text": "{{answer3}}"
									}
									}{%- endif -%}{%- if question4 -%}, {
									"@type": "Question",
									"name": "{{question4}}",
									"acceptedAnswer": {
									"@type": "Answer",
									"text": "{{answer4}}"
									}
									}{%- endif -%}{%- if question5 -%}, {
									"@type": "Question",
									"name": "{{question5}}",
									"acceptedAnswer": {
									"@type": "Answer",
									"text": "{{answer5}}"
									}
									}{%- endif -%}]
									}
									</script>
								{%- endif -%}
							</div>
						</div>

						{% if author %}
						<!-- post content area-->
						<div class="author-box">
							<img class="author-img" src="/images/authors/{{authors[author].photo}}" alt="">
							<div class="author-info">
								<h4 class="author-name">{{authors[author].name}}</h4>
								<div class="authors-social">
									{% if authors[author].twitter %}
									<a href="{{authors[author].twitter}}" class="ts-twitter">
										<i class="fa fa-twitter"></i>
									</a>
									{% endif %}
									{% if authors[author].facebook %}
									<a href="{{authors[author].facebook}}" class="ts-facebook">
										<i class="fa fa-facebook"></i>
									</a>
									{% endif %}
									{% if authors[author].instagram %}
									<a href="{{authors[author].instagram}}" class="ts-google-plus">
										<i class="fa fa-instagram"></i>
									</a>
									{% endif %}
									{% if authors[author].linkedin %}
									<a href="{{authors[author].linkedin}}" class="ts-linkedin">
										<i class="fa fa-linkedin"></i>
									</a>
									{% endif %}
								</div>
								<div class="clearfix"></div>
								<p>{{authors[author].bio}}</p>

							</div>
						</div>
						<!-- author box end-->
						{% endif %}
					</div>
					<!--single post end -->
					<div class="comments-form ts-grid-box">
						<div id="disqus_thread"></div>
						<script>
						var disqus_config = function () {
							this.page.url = PAGE_URL;  // Replace PAGE_URL with your page's canonical URL variable
							this.page.identifier = PAGE_IDENTIFIER; // Replace PAGE_IDENTIFIER with your page's unique identifier variable
						};

						(function() { // DON'T EDIT BELOW THIS LINE
						var d = document, s = d.createElement('script');
						s.src = 'https://devchattv.disqus.com/embed.js';
						s.setAttribute('data-timestamp', +new Date());
						(d.head || d.body).appendChild(s);
						})();
						</script>
						<noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
					</div>
					<!-- comment form end-->

					<div class="ts-grid-box mb-30">
						<h2 class="ts-title">Most Popular</h2>

						<div class="most-populers owl-carousel">
							{% for post in collections.popular %}
							<div class="item">
								<a class="post-cat ts-yellow-bg" href="/{{post.data.podcast}}">{{podcasts[post.data.podcast].title}}</a>
								<div class="ts-post-thumb">
									<a href="{{post.url | url}}">
										<img class="img-fluid" src="/images/podcasts/{{podcasts[post.data.podcast].artwork_front}}" alt="">
									</a>
								</div>
								<div class="post-content">
									<h3 class="post-title">
										<a href="{{post.url | url}}">{{post.data.title}}</a>
									</h3>
									<span class="post-date-info">
										<i class="fa fa-clock-o"></i>
										{{post.data.date | date}}
									</span>
								</div>
							</div>
							<!-- ts-grid-box end-->
							{% endfor %}
						</div>
						<!-- most-populers end-->
					</div>

				</div>
				<!-- col end -->
				<div class="col-lg-3">
          {% if podcast %}
						{% include podcasts[ podcast ].sponsor_layout %}
					{% else %}
						{% include "sitewide_sidebar_sponsors.njk" %}
					{% endif %}
					<div class="widgets widgets-item">
						<h3 class="widgets-title">
							<span>Suggestion Box</span>
						</h3>

						<ul class="ts-block-social-list">
							<li class="ts-pinterest">
								<a href="/{{podcast}}/recommend">
									<i class="fa fa-check"></i>
									<b>Suggest a Topic or Guest </b>
								</a>
							</li>
						</ul>
					</div>

					{% include "subscribe.njk" %}
					{% include "social_links.njk" %}

          <div class="post-list-item widgets">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist">
              <li role="presentation">
                <a class="active" href="#home" aria-controls="home" role="tab" data-toggle="tab">
                  <i class="fa fa-clock-o"></i>
                  Recent
                </a>
              </li>
              <li role="presentation">
                <a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">
                  <i class="fa fa-heart"></i>
                  Favorites
                </a>
              </li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content">
              <div role="tabpanel" class="tab-pane active ts-grid-box post-tab-list" id="home">
                {% for post in collections.published | head(-5) | reverse %}
                <div class="post-content media">
                  <img class="d-flex sidebar-img" src="{{post.data.image}}" alt="">
                  <div class="media-body">
                    <span class="post-tag">
                      {% if post.data.podcast %}
	                      <a href="/{{podcasts[post.data.podcast].slug}}" class="{{podcasts[post.data.podcast].color}}-color"> {{podcasts[post.data.podcast].title}}</a>
											{% else %}
	                      <a href="/blog" class="pink-color"> Blog</a>
                      {% endif %}
                      
                    </span>
                    <h4 class="post-title">
                      <a href="{{post.url | url}}">{{post.data.title}} </a>
                    </h4>
                  </div>
                </div>
                <!--post-content end-->
                {% endfor %}
              </div>
              <!--ts-grid-box end -->

              <div role="tabpanel" class="tab-pane ts-grid-box post-tab-list" id="profile">
                {% for post in collections.popular | head(-5) %}
                <div class="post-content media">
                  <img class="d-flex sidebar-img" src="{{post.data.image}}" alt="">
                  <div class="media-body">
                    <span class="post-tag">
                      {% if post.data.podcast %}
	                      <a href="/{{podcasts[post.data.podcast].slug}}" class="{{podcasts[post.data.podcast].color}}-color"> {{podcasts[post.data.podcast].title}}</a>
											{% else %}
	                      <a href="/blog" class="pink-color"> Blog</a>
                      {% endif %}
                    </span>
                    <h4 class="post-title">
                      <a href="{{ post.url | url }}">{{post.data.title}}</a>
                    </h4>
                  </div>
                </div>
                <!--post-content end-->
                {% endfor %}
              </div>
              <!--ts-grid-box end -->
            </div>
            <!-- tab content end-->
          </div>
          <!-- widgets end-->
				</div>
				<!-- col end-->
			</div>
			<!-- row end-->
		</div>
		<!-- container-->
	</section>
	<!-- single post end-->
